version: '3.9'

services:

  postgres:
    image: postgres:16
    container_name: payments-postgres
    restart: always
    environment:
      POSTGRES_DB: paymentsdb
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"
    volumes:
      - postgres-data:/var/lib/postgresql/data
    networks:
      - payments-network

  zookeeper:
    image: confluentinc/cp-zookeeper:7.5.0
    container_name: payments-zookeeper
    restart: always
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
    networks:
      - payments-network

  kafka:
    image: confluentinc/cp-kafka:7.5.0
    container_name: payments-kafka
    restart: always
    depends_on:
      - zookeeper
    ports:
      - "9092:9092"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: payments-zookeeper:2181
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:9092
      KAFKA_LISTENERS: PLAINTEXT://0.0.0.0:9092
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
    networks:
      - payments-network

  api:
    build:
      context: .
      dockerfile: src/Payments.EventDriven.Api/Dockerfile
    container_name: payments-api
    restart: always
    depends_on:
      - postgres
      - kafka
    ports:
      - "8080:8080"
    environment:
      ASPNETCORE_URLS: http://+:8080
      ConnectionStrings__DefaultConnection: Host=postgres;Port=5432;Database=paymentsdb;Username=postgres;Password=postgres
      Kafka__BootstrapServers: kafka:9092
    networks:
      - payments-network

  processor:
    build:
      context: .
      dockerfile: src/Payments.EventDriven.Processor/Dockerfile
    container_name: payments-processor
    restart: always
    depends_on:
      - postgres
      - kafka
    environment:
      ConnectionStrings__DefaultConnection: Host=postgres;Port=5432;Database=paymentsdb;Username=postgres;Password=postgres
      Kafka__BootstrapServers: kafka:9092
    networks:
      - payments-network

networks:
  payments-network:
    driver: bridge

volumes:
  postgres-data: