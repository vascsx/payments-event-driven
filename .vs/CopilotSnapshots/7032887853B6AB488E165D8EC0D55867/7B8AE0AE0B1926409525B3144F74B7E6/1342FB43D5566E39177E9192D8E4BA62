# Esta fase é usada durante a execução no VS no modo rápido (Padrão para a configuração de Depuração)
FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

# Esta fase é usada para compilar o projeto de serviço
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["Payments.EventDriven.Api.csproj", "Payments.EventDriven.Api/"]
COPY ["Payments.EventDriven.Application/Payments.EventDriven.Application.csproj", "Payments.EventDriven.Api/Payments.EventDriven.Application/"]
COPY ["Payments.EventDriven.Domain/Payments.EventDriven.Domain.csproj", "Payments.EventDriven.Api/Payments.EventDriven.Domain/"]
COPY ["Payments.EventDriven.Infrastructure/Payments.EventDriven.Infrastructure.csproj", "Payments.EventDriven.Api/Payments.EventDriven.Infrastructure/"]
RUN dotnet restore "Payments.EventDriven.Api/Payments.EventDriven.Api.csproj"
COPY . Payments.EventDriven.Api/
WORKDIR "/src/Payments.EventDriven.Api"
RUN dotnet build "Payments.EventDriven.Api.csproj" -c $BUILD_CONFIGURATION -o /app/build

# Esta fase é usada para publicar o projeto de serviço a ser copiado para a fase final
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "Payments.EventDriven.Api.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# Esta fase é usada na produção ou quando executada no VS no modo normal (padrão quando não está usando a configuração de Depuração)
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Payments.EventDriven.Api.dll"]